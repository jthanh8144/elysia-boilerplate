{
  "name": "elysia-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun --watch run src/index.ts",
    "prepare": "husky install",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.{ts,tsx}\" --fix",
    "typeorm": "ts-node -r tsconfig-paths/register -P tsconfig.typeorm.json ./node_modules/typeorm/cli.js",
    "migration:generate": "bun scripts/database-migrate.js",
    "migration:run": "bun run typeorm -- migration:run -d ./src/shared/configs/data-source.config.ts",
    "migration:revert": "bun run typeorm -- migration:revert -d ./src/shared/configs/data-source.config.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/html": "^1.3.1",
    "@elysiajs/openapi": "^1.3.11",
    "@elysiajs/server-timing": "^1.3.0",
    "@elysiajs/static": "^1.3.0",
    "bcryptjs": "^2.4.3",
    "elysia": "^1.3.21",
    "elysia-helmet": "^1.0.2",
    "elysia-ip": "^1.0.10",
    "elysia-rate-limit": "^4.4.0",
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "typeorm": "^0.3.26",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@eslint/js": "^9.35.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/http-errors": "^2.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "bun-types": "^1.2.21",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.42.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "module": "src/index.js"
}
